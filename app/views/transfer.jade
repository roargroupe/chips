extends layout

block content
  h1= title

  form#transfer-chips
    label(for='from') From:
    select(id='from', name='from')
      each user in users
        option(value=user.uid) #{user.name} #{user.real_name ? ('(' + user.real_name + ')') : ''}
    label(for='to') To:
    select(id='to', name='to')
      each user in users
        option(value=user.uid) #{user.name} #{user.real_name ? ('(' + user.real_name + ')') : ''}
    label(for='amount') Amount:
    input(id='amount', type='text', name='amount', value='1')
    input(type='submit')

  h2 Run Chip Command
    form#chip-command
      label(for='text') /chip 
      textarea(id='text', name='text') @bernard you really know how to chip :)
      input(type='submit') 